<p id="notice"><%= notice %></p>
<div class="container-fluid">
  <h1>Real Estate Companies</h1>
  <table class="table table-hover">
    <thead>
    <tr>
      <th>Name</th>
      <th>Year Founded</th>
      <th>Annual Income</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @real_estate_companies.each do |real_estate_company| %>
      <tr>
        <td><%= real_estate_company.name %></td>
        <td><%= real_estate_company.founded %></td>
        <td><%= real_estate_company.revenue %></td>
        <td><%= link_to 'Show', real_estate_company %></td>
        <td><%= link_to 'Edit', edit_real_estate_company_path(real_estate_company) %></td>
        <td><%= button_to 'Remove',  real_estate_company, method: :delete, data: {confirm: 'Are you sure?'}%></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= link_to 'Back', home_path %>
</div>