<p id="notice"><%= notice %></p>
<div class="container-fluid">
  <h1>Houses</h1>
  <p>List of all the houses available.</p><br>
  <table class="table table-hover">
    <thead>
    <tr>
      <th>User ID</th>
      <th>Name</th>
      <th>Roles</th>
      <th>Email</th>
      <th>Phone Number</th>
      <th>Preferred Contact Method</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.roles %></td>
        <td><%= user.email %></td>
        <td><%= user.phone_number %></td>
        <td><%= user.preferred_contact_method %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user)%></td>
        <td><%= button_to 'Remove',  user, method: :delete, data: {confirm: 'Are you sure?'} if user.roles != 0%></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>


<br>

