<%= form_for @house do |f| %>
  <% if @house.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@house.errors.count, "error") %> prohibited this house from being saved:</h2>

      <ul>
        <% @house.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :location %><br />
    <%= f.text_field :location, class: 'form-control', required: true %>
  </div>

  <div class="field">
    <%= f.label :square_footage %><br />
    <%= f.number_field :square_footage, class: 'form-control', required: true %>
  </div>

  <div class="field">
    <%= f.label :year %><br />
    <%= f.number_field :year, class: 'form-control', required: true %>
  </div>

  <div class="field">
    <%= f.label :style %><br />
    <%= f.select :style, [['Single Family House'], ['Apartment'], ['Condo']] %>
  </div>

  <div class="field">
    <%= f.label :price %><br />
    <%= f.number_field :price %>
  </div>

  <div class="field">
    <%= f.label :floors %><br />
    <%= f.number_field :floors %>
  </div>

  <div class="field">
    <%= f.label :basement %><br />
    <%= f.check_box :basement %>
  </div>

  <div class="field">
    <%= f.label :owner %><br />
    <%= f.text_field :owner %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>