<% provide(:title, "Log in") %>
<div class="container" style="margin-top: 50px">
  <div class="card">
    <div class="card-body">
      <h2 class="card-title">Sign In</h2>
      <h6 class="card-subtitle mb-2 text-muted">Already have an account? Enter your credentials here!</h6>
      <br>
      <%= form_for(:session, url: login_path) do |f| %>

        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
        <br>

        <%= f.submit "SIGN IN", class: "btn btn-outline-secondary btn-block" %>
      <% end %>

      <p>Don't have an
        account?<%= link_to '<button type="button" class="btn btn-link">Sign up now!</button>'.html_safe, signup_path %></p>
    </div>
  </div>
</div>
